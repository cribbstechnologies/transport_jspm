{
  "name": "transport_jspm",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "watches": {
    "copy:templates": "app/**/*.html",
    "build:ts": "app/**/*.ts"
  },
  "scripts": {
    "clean": "rm -rf public && mkdir public",
    "build:bundle": "jspm bundle-sfx app/index public/app.js",
    "build:uglify": "./node_modules/.bin/uglifyjs public/app.js -o public/app.min.js",
    "build:html": "./node_modules/.bin/html-dist index.html --remove-all --minify --insert app.js -o public/index.html",
    "build:ts": "npm run build:bundle && npm run build:html",
    "build": "npm run build:ts && npm run copy:templates",
    "copy:templates": "node build/copyHtml.js",
    "start": "npm run build &&  concurrent --kill-others \"node build/runServer.js\" \"rerun-script\""
  },
  "author": "",
  "license": "ISC",
  "jspm": {
    "dependencies": {
      "angular2": "npm:angular2@^2.0.0-beta.0",
      "reflect-metadata": "npm:reflect-metadata@^0.1.2",
      "typescript": "npm:typescript@^1.6.2"
    },
    "devDependencies": {}
  },
  "devDependencies": {
    "concurrently": "^1.0.0",
    "fs-extra": "^0.26.3",
    "html-dist": "^0.1.0",
    "jspm": "^0.16.19",
    "live-server": "^0.9.0",
    "parallelshell": "^2.0.0",
    "rerun-script": "^0.6.0",
    "uglifyjs": "^2.4.10"
  }
}
